<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout
        android:padding="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/colorTappedIcon"
            />
        <RelativeLayout
            android:id="@+id/details_box"
            android:background="@color/colorPrimaryDark"
            android:alpha="3"
            android:layout_below="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/row_1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_man_white"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_man_white"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/tv_cousin_name"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/img_man_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="لا يوجد"
                    android:textColor="@color/titleTextColor"/>



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_2"
                android:layout_below="@+id/row_1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_job_note"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_alert_bar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/tv_cousin_request"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/img_job_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="لا يوجد"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_3"
                android:layout_below="@+id/row_2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/img_marker_white"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_call"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@android:color/white"
                    />

                <TextView
                    android:id="@+id/tv_cousin_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/img_marker_white"
                    android:layout_toStartOf="@+id/img_marker_white"
                    android:text="لا يوجد"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/details_box"
            android:background="@color/colorTappedIcon"
            android:layout_width="match_parent"
            android:layout_height="35dp">


            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_chat_black"
                android:layout_toRightOf="@+id/line_2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />

            <View
                android:id="@+id/line_3"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor"
                android:layout_toRightOf="@+id/img_chat"
                android:layout_marginLeft="20dp"
                />

            <Button
                android:id="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/line_3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="اتصل مكالمه "
                android:gravity="center"
                android:textColor="@color/backgroundColor"
                android:textStyle="bold"
                android:background="@color/transparent"
                />



        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_logo"
        />

