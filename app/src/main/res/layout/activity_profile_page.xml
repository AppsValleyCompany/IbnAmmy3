<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    android:background="@color/background"
    >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/layoutcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/light_black"
                    android:orientation="horizontal"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp">


                    <ImageView
                        android:id="@+id/img_user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="0.09"
                        android:src="@mipmap/ic_marker_white" />

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1.2"
                        android:src="@drawable/ic_profile_image" />

                    <ImageView
                        android:id="@+id/img_favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="90dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="0.2"
                        app:srcCompat="@mipmap/ic_unfavourite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/light_black"
                    android:orientation="horizontal"
                    android:paddingBottom="40dp"
                    android:weightSum="1.3">

                    <TextView
                        android:id="@+id/statues"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.18"
                        android:background="@drawable/statues_border"
                        android:gravity="center"
                        android:text="باحث عن وظيفة "
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="خالد عقبى"
                            android:textColor="@color/gold"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/user_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="محامي نقض"
                            android:textColor="@color/white"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/tab_section"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="10"
                    android:scrollbars="vertical"></FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.5"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:background="@color/red"
                        android:drawableRight="@mipmap/ic_chat"
                        android:gravity="center"
                        android:paddingRight="25dp"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/ask_for_service_bt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gold"
                        android:text="اتصل مكالمه"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

 </ScrollView>
</FrameLayout>
