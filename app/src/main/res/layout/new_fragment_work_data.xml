<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black1"
    android:padding="15dp"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:gravity="right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_white_frame"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:layoutDirection="rtl"
            >
            <Spinner
                android:id="@+id/cat_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/cat_type"
                android:gravity="center"
                android:theme="@style/spinnerTheme"
                android:backgroundTint="@color/white"
                />
        </FrameLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="أنا: "
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:gravity="right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_white_frame"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:layoutDirection="rtl"
            >
            <Spinner
                android:id="@+id/spinner_service_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:theme="@style/spinnerTheme"
                android:backgroundTint="@color/white"
                />
        </FrameLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="نوع العمل: "
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"

            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:gravity="right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_white_frame"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:layoutDirection="rtl"
            >
            <Spinner
                android:id="@+id/spinner_service_subcategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:theme="@style/spinnerTheme"
                android:backgroundTint="@color/white"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/service_sub_cat_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="نوع المؤسسة:"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:gravity="right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_white_frame"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:layoutDirection="rtl"
            >
            <Spinner
                android:id="@+id/spinner_service_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:theme="@style/spinnerTheme"
                android:backgroundTint="@color/white"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/service_type_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="التخصص الوظيفي:"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"

            />
    </TableRow>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/organization_name_et"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/rectangle_white_frame"
        android:hint=" اسم المؤسسة"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:visibility="visible"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

        <include layout="@layout/address_layout" />

    <Button
        android:id="@+id/upload_media_page_btn"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/light_orange"
        android:text="اضافة ميديا/اعلان"
        android:textColor="@color/light_black2"
        />

</LinearLayout>
