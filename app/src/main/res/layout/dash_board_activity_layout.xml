<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.av.ibnammy.dashboard.DashBoardFragment"

    android:background="@color/background"
    android:paddingTop="20dp">

<!--
    tools:contecom.av.ibnammy.dashboard.DashBoardActivityvity"
-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:orientation="vertical"
                android:background="@color/light_black1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/all_members"
                >

                <com.av.ibnammy.classes.ProgressWheel
                    android:layout_gravity="center"
                    android:id="@+id/progressBarTwo"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    ProgressWheel:pwTextColor="@color/white"
                    ProgressWheel:pwTextSize="14sp"
                    ProgressWheel:pwRimColor="@color/background"
                    ProgressWheel:pwBarLength="100dp"
                    ProgressWheel:pwBarColor="@color/gold"
                    ProgressWheel:pwBarWidth="20dp"
                    ProgressWheel:pwRimWidth="25dp"
                    ProgressWheel:pwSpinSpeed="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2550"
                    android:textSize="20dp"
                    android:id="@+id/number_of_all_members"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <TextView

                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:text="عضو"
                    android:textColor="@color/gold"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>


            </FrameLayout>

            <TableRow
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <LinearLayout

                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:background="@drawable/layout_corners_lightblack"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/offline">

                    <TextView
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:text="عضوية مفعلة "
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5" />

                    <TextView
                        android:paddingBottom="10dp"
                        android:text="755 عضو"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/number_of_nonactive" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.01"
                    android:background="@drawable/layout_corners_red"
                    android:orientation="vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/red"></LinearLayout>

                <LinearLayout
                    android:layout_weight="0.27"
                    android:orientation="vertical"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/space"></LinearLayout>

                <LinearLayout
                    android:layout_weight="0.4"
                    android:background="@drawable/layout_corners_lightblack"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:paddingLeft="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/online">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="عضوية مفعلة "
                        android:textSize="18dp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3" />
                    <TextView
                        android:text="1975عضو"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/gold"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_of_active" />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.01"
                    android:background="@drawable/layout_corners_gold"
                    android:orientation="vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/gold"></LinearLayout>
            </TableRow>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/light_black_rounded_corners"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.1"
                android:id="@+id/drop_list">

                <AutoCompleteTextView
                    android:focusable="false"
                    android:textColor="@color/gold"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/ic_unselected_arrow"
                    android:cursorVisible="false"
                    android:backgroundTint="@color/light_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="القاهرة"
                    android:id="@+id/multiAutoCompleteTextView"
                    android:paddingRight="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_black1"
                android:layout_marginTop="20dp"

                >
            <FrameLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.av.ibnammy.classes.ProgressWheel
                    android:layout_marginRight="35dp"
                    android:layout_gravity="end"
                    android:id="@+id/progressBarthree"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    ProgressWheel:pwTextColor="@color/white"
                    ProgressWheel:pwTextSize="14sp"
                    ProgressWheel:pwRimColor="@color/background"
                    ProgressWheel:pwBarLength="100dp"
                    ProgressWheel:pwBarColor="@color/gold"
                    ProgressWheel:pwBarWidth="10dp"
                    ProgressWheel:pwRimWidth="12dp"
                    ProgressWheel:pwSpinSpeed="3dp"/>

                <com.av.ibnammy.classes.ProgressWheel
                    android:id="@+id/progressBarfour"
                    android:layout_width="100dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="35dp"
                    android:layout_height="100dp"
                    ProgressWheel:pwTextColor="@color/white"
                    ProgressWheel:pwTextSize="14sp"
                    ProgressWheel:pwRimColor="@color/background"
                    ProgressWheel:pwBarLength="100dp"
                    ProgressWheel:pwBarColor="@color/gold"
                    ProgressWheel:pwBarWidth="10dp"
                    ProgressWheel:pwRimWidth="12dp"
                    ProgressWheel:pwSpinSpeed="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="75dp"
                    android:layout_gravity="start"
                    android:id="@+id/nonactive_members_numbers"
                    />

                <TextView
                    android:id="@+id/active_members_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="73dp"
                    android:layout_gravity="end"
                    />


            </FrameLayout>

            <LinearLayout
                android:background="@color/light_black"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:text="عضو غير مفعل "
                    android:textColor="@color/gold"
                    android:textSize="20dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1" />

                <TextView
                    android:paddingBottom="5dp"
                    android:text="عضو نشيط"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1.4" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
