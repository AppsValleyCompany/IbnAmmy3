    <EditText
        android:id="@+id/birth_date_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_white_frame"
        android:layout_marginTop="10dp"
        android:hint="تاريخ الميلاد"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textSize="14sp"
        android:editable="false"
        android:clickable="true"
        android:focusable="false"
        android:gravity="right"
        />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_white_frame"
            android:hint="@string/email_ed_hint"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
/>

    </TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:weightSum="2">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_white_frame"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        >
        <Spinner
            android:id="@+id/marital_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/marital_status_array"
            android:paddingLeft="25dp"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:layoutDirection="rtl"

            />

    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_white_frame"
        android:layout_weight="1"
        >
        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/gender"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:layoutDirection="rtl"
            />

    </FrameLayout>

</TableRow>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_white_frame"
        >
        <Spinner
            android:id="@+id/blood_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/blood_type_array"
            android:paddingLeft="25dp"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:layoutDirection="rtl"
            />
    </FrameLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="التالي"
        android:textStyle="bold"
        android:textColor="@color/light_black2"
        android:background="@drawable/solid_orange_rounded_corners"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"/>
</LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</FrameLayout>
</layout>