<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

<LinearLayout
android:id="@+id/request_help"
android:visibility="visible"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#1c1d21"
android:orientation="vertical"
android:baselineAligned="false">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp"
    android:background="@drawable/rectangle_white_frame">
    <Spinner
        android:id="@+id/dd_request_help"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:entries="@array/requestHelpList"
        android:popupBackground="@color/background"
        android:theme="@style/spinnerTheme"
        android:backgroundTint="@color/white"
        />
</FrameLayout>

<FrameLayout
    android:id="@+id/frame_blood_type"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp"
    android:background="@drawable/rectangle_white_frame">
    <Spinner
        android:id="@+id/dd_blood_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:entries="@array/blood_type_array"
        android:popupBackground="@color/background"
        android:theme="@style/spinnerTheme"
        android:backgroundTint="@color/white"
        />
</FrameLayout>

<Button
    android:id="@+id/btn_search_help"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textAlignment="center"
    android:text="اطلب"
    android:background="#fab864"
    android:layout_marginBottom="20dp"
    />


</LinearLayout>
</layout>
