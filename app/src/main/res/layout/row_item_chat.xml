<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <RelativeLayout
        android:background="@color/backgroundColor"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_photo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile_image"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_profile_photo"
        android:text="خالد عقبى"
        android:textColor="@color/titleTextColor"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/txt_job_user_name"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_profile_photo"
        android:text="السلام عليكم"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"/>

         <ImageView
             android:id="@+id/img_settings"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/ic_settings"
             android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="20dp"
             />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/img_settings"
          android:layout_centerVertical="true"
          android:text="   11/1/2017  "
          android:textColor="@android:color/white"/>



    </RelativeLayout>


</RelativeLayout>